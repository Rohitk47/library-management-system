<h2>My Books</h2>

<table border="1">
<tr>
  <th>Book</th>
  <th>Status</th>
  <th>Action</th>
</tr>

<% issuedTransactions.forEach(t => { %>
<tr>
  <td><%= t.bookId.title %></td>
  <td><%= t.status %></td>
  <td>
    <% if (t.status === 'Issued') { %>
      <form method="POST" action="/transactions/request-return">
        <input type="hidden" name="txId" value="<%= t._id %>">
        <button>Request Return</button>
      </form>
    <% } else { %>
      ---
    <% } %>
  </td>
</tr>
<% }) %>
</table>

<br>
